# Salem Cyber Vault API Configuration
# Copy this file to .env.local and add your API keys

# Shodan API for device scanning and threat intelligence
SHODAN_API_KEY=your_shodan_api_key_here

# VirusTotal API for malware analysis
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# AbuseIPDB API for IP reputation data
ABUSEIPDB_API_KEY=your_abuseipdb_api_key_here

# OpenCTI API for threat intelligence (optional)
OPENCTI_API_URL=https://your-opencti-instance.com
OPENCTI_API_TOKEN=your_opencti_token_here

# CVE API settings (free - no key required)
CVE_API_URL=https://services.nvd.nist.gov/rest/json/cves/2.0

# GeoIP settings for threat mapping
IPGEOLOCATION_API_KEY=your_ipgeolocation_api_key_here

# Real-time updates
WEBSOCKET_ENABLED=true
UPDATE_INTERVAL_MS=30000