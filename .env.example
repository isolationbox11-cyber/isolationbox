# Salem Cyber Vault Environment Variables
# Copy this file to .env.local and fill in your values

# Application Configuration
NODE_ENV=production
PORT=3000

# Vercel Deployment (if using Vercel)
# Get these from your Vercel dashboard
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_org_id_here
VERCEL_PROJECT_ID=your_project_id_here

# Analytics (optional)
# NEXT_PUBLIC_GA_ID=your_google_analytics_id
# NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# API Keys (if needed for cybersecurity data)
# CYBER_THREAT_API_KEY=your_threat_api_key
# VULNERABILITY_DB_API_KEY=your_vuln_db_key

# Database (if you add one later)
# DATABASE_URL=your_database_connection_string

# Security
# NEXTAUTH_SECRET=your_nextauth_secret
# NEXTAUTH_URL=http://localhost:3000

# Feature Flags
# NEXT_PUBLIC_ENABLE_ANALYTICS=false
# NEXT_PUBLIC_ENABLE_REAL_DATA=false