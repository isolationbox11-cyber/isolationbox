# Salem Cyber Vault API Configuration
# Copy this file to .env.local and add your API keys

# Shodan API for device discovery and cyber search
SHODAN_API_KEY=your_shodan_api_key_here

# AlienVault OTX API for threat intelligence
OTX_API_KEY=your_otx_api_key_here

# VirusTotal API for malware and threat analysis
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# IP Geolocation API for attack source mapping
IPGEOLOCATION_API_KEY=your_ipgeolocation_api_key_here

# Optional: Custom API endpoints
CUSTOM_THREAT_FEED_URL=
CUSTOM_CVE_API_URL=

# Rate limiting configuration
API_RATE_LIMIT_REQUESTS_PER_MINUTE=60
API_CACHE_TTL_SECONDS=300

# Development mode settings
NODE_ENV=development
NEXT_PUBLIC_ENABLE_MOCK_DATA=false